@{
    ViewData["Title"] = "Създай отдел";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var roles = ViewData["Roles"] as IEnumerable<Role>;
}
<div class="d-flex justify-content-center align-items-center">
    <h3>Всички длъжности в компанията</h3>
</div>
<hr class="w-75">

<div>
    <a class="btn btn-primary rounded mb-2" asp-action="Create_Role" asp-controller="Admin">
        Създай длъжност
    </a>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Име на длъжност</th>
                <th scope="col">Отдел</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in roles)
            {
                <tr>
                    <td class="w-50 align-middle">@role.RoleName</td>
                    <td class="w-25 align-middle">@role.Department.DepartmentName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

