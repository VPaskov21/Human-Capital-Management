<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/dropdown.css">
    <script src="https://unpkg.com/@@popperjs/core@2/dist/umd/popper.min.js"></script>
    <script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js"></script>
    <script type="text/javascript" src="~/js/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/js/js_script.js"></script>
    <script type="text/javascript" src="~/js/validation.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap-datepicker3.min.css">
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/bootstrap-datepicker.bg.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    @RenderSection("scripts", required: false)
</head>
<body class="d-flex flex-column h-100">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <img class="d-block mx-auto mb-2" src="~/img/logo-sm-text.png" alt="">
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Employee"><i class="fas fa-home"></i> Начало</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Заплати
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Salary_History">История на получените заплати</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Отпуски
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-action="Calendar_Events" asp-controller="Employee">Календар отпуски</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Request_Absence">Нова заявка за отпуска</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Employee" asp-action="Absence_Requests">Вашите заявки за отпуска</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Служители
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Employee" asp-action="All_Employees">Всички служители</a></li>
                            <li><a class="dropdown-item" asp-controller="Employee" asp-action="Employees_By_Department">Служители в твоя отдел</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="dropdown text-end">

                @await Component.InvokeAsync("Image")

                <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" style="">
                    <li><a class="dropdown-item" asp-action="Profile" asp-controller="Employee">Профил</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item" asp-action="Logout" asp-controller="Employee">Изход</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container pb-3 mb-5">
        @RenderBody()
    </div>

    <footer class="footer fixed-bottom mt-auto py-3 bg-light">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-1 text-center text-primary">
                    <i class="bi bi-linkedin"></i>
                </div>
                <div class="col-1 text-center text-primary">
                    <i class="bi bi-facebook"></i>
                </div>
                <div class="col-1 text-center text-primary">
                    <i class="bi bi-twitter"></i>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>